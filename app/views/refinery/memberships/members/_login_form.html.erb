<%= form_for Refinery::User.new, :as => 'refinery_user', :url => refinery_user_session_path, html: {class: "form-horizontal"} do | f | %>
  <div class="control-group">
    <%= f.label :login, t('.username'), class: "control-label" %>
    <div class="controls">
      <%= f.text_field :login %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, t('.password'), class: "control-label" %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  <%= hidden_field_tag :redirect, params[:redirect] %>
  <%= hidden_field_tag :member_login, true %>

  <div class="form-actions">
      <%= f.submit t('.login'), class: "btn btn-primary"%>
  </div>
<% end %>
