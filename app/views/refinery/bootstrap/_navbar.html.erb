<% nav_class = "navbar"; nav_class << " navbar-#{local_assigns[:display]}" if not local_assigns[:display].nil? %>
<div class="<%= nav_class %>">
  <div class="navbar-inner">
    <div class="container">
      <div class="pull-left"><%= image_tag "logo_transp.png", class: "navbar-logo", width: "25px" %></div>
      <% unless !local_assigns[:brand] %>
        <%= link_to refinery.root_path, :class => "brand" do %>
          <%= Refinery::Core.site_name %>
        <% end -%>
      <% end -%>
    	<% if !!local_assigns[:responsive] %>
    		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
    			<span class="icon-bar"></span>
    			<span class="icon-bar"></span>
    			<span class="icon-bar"></span>
    		</a>
    	<% end %>
    	<% if !!local_assigns[:responsive] %>
    		<%= render(:partial => "/refinery/bootstrap/menu", :locals => {:divider => :after, :roots => refinery_menu_pages[0..local_assigns[:responsive]] }) %>
    		<div class="nav-collapse">
          <%= render '/refinery/bootstrap/member' %>
      		<%= render(:partial => "/refinery/bootstrap/menu", :locals =>  {:divider => :after_except_last, :roots => refinery_menu_pages[local_assigns[:responsive]+1..-1] }) %>
      	</div>
        <% else %>
          <%= render '/refinery/bootstrap/member' %>
          <%= render(:partial => "/refinery/bootstrap/menu") %>
    	<% end %>
    </div>
  </div>
</div>
