<%= form_for [refinery, :publications_admin, @publication] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @publication,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :authors -%>
    <%= f.text_field :authors, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :review -%>
    <%= f.text_field :review, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :year -%>
    <%= f.number_field :year -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.publications.admin.publications.publication'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @publication.authors) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
