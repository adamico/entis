<ul>
  <% if ::Refinery::States::Admin::StatesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.states_admin_states_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_states_admin_state_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::States::Admin::StatesController.sortable? && ::Refinery::States::State.any? %>
  <li>
    <%= link_to t('.reorder', :what => "States"),
                 refinery.states_admin_states_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "States"),
                 refinery.states_admin_states_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
