<%= form_for [refinery, :states_admin, @state] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @state,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.states.admin.states.state'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @state.name) %>
<% end -%>
