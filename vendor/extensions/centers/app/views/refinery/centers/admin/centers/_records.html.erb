<% if searching? %>
  <h2><%= t('results_for', :scope => 'refinery.admin.search', :query => params[:search]) %></h2>
<% end %>

<% if observer_only? %>
  <h2>Listing centers with observer status only</h2>
<% else %>
  <h2>Listing all centers</h2>
<% end -%>

<div class='pagination_container'>
  <% if centers.any? %>
    <%= render 'centers', centers: centers %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'refinery.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
