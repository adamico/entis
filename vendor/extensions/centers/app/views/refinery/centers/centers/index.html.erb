<% content_for :body do %>
  <div class="row-fluid">
    <div class="span4"><div class="canvas" id="canvas_europe"></div></div>
    <div class="span2">
      <div class="canvas" id="canvas_middle_east"></div>
      <div class="canvas" id="canvas_south_america"></div>
    </div>
    <div class="span6">
      <div class="canvas" id="canvas_japan"></div>
    </div>
  </div>
  <table id="centers" class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>State</th>
        <th>Members</th>
      </tr>
    </thead>
    <tbody>
      <% @states.each do |state| -%>
        <tr>
          <td><%= state.name %></td>
          <td>
            <ul class="comma-list">
              <% state.centers.each do |center| %>
                <li>
                  <%= link_to center.name, refinery.centers_state_centers_path(center, state_id: center.state) %>
                </li>
              <% end -%>
            </ul>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% end %>

<%= render '/refinery/content_page' %>
