<% content_for :body do %>
  <div class="row-fluid">
    <div class="span4"><div class="canvas" id="canvas_europe"></div></div>
    <div class="span8">
      <div class="canvas" id="canvas_middle_east"></div>
      <div class="canvas" id="canvas_south_america"></div>
    </div>
  </div>
  <table id="centers" class="table table-condensed">
    <tr>
      <td colspan="2"><%= image_tag "carte.png" %></td>
    </tr>
    <% @states.each do |state| -%>
      <tr>
        <td><%= state.name %></td>
        <td>
          <ul class="comma-list">
            <% state.centers.order("name ASC").each do |center| %>
              <li>
                <%= link_to center.name, refinery.centers_state_centers_path(center, state_id: center.state) %>
              </li>
            <% end -%>
          </ul>
        </td>
      </tr>
    <% end -%>
  </table>
<% end %>

<%= render '/refinery/content_page' %>
