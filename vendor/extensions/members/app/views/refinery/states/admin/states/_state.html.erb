<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(state) -%>">
  <span class='title'>
    <%= state.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.states_state_path(state),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_states_admin_state_path(state),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.states_admin_state_path(state),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => state.name),
        :method => :delete %>
  </span>
</li>
