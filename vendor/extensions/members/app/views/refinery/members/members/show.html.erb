<% content_for :body_content_title do %>
  <%= @member.name %>
<% end %>

<% content_for :body do %>
  <dl class="dl-horizontal dl-large">
    <% %w(service_name service_head address phone fax).each do |field| -%>
      <%= def_item_for_member(@member, field) %>
    <% end -%>
    <%= def_item_for_member(@member, "email", email_def_content(@member, @member.email)) %>
    <% %w(website creation affiliation hours accept_calls_from area_served staff).each do |field| -%>
      <%= def_item_for_member(@member, field) %>
    <% end -%>
  </dl>
<% end %>

<% if @other_members.any? -%>
  <% content_for :side_body do %>
    <aside>
      <h2><%= t('.other') %></h2>
      <ul id="members">
        <% @other_members.each do |member| %>
          <li>
            <%= link_to member.name, refinery.members_state_members_path(member, state_id: member.state) %>
          </li>
        <% end %>
      </ul>
    </aside>
  <% end %>
<% end -%>

<%= render '/refinery/content_page' %>
