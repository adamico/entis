<% content_for :body_content_title do %>
  <%= @member.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @member.name %>
    </p>
  </section>
  <section>
    <h1>Service Name</h1>
    <p>
      <%=raw @member.service_name %>
    </p>
  </section>
  <section>
    <h1>Service Head</h1>
    <p>
      <%=raw @member.service_head %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @member.address %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @member.phone %>
    </p>
  </section>
  <section>
    <h1>Fax</h1>
    <p>
      <%=raw @member.fax %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @member.email %>
    </p>
  </section>
  <section>
    <h1>Website</h1>
    <p>
      <%=raw @member.website %>
    </p>
  </section>
  <section>
    <h1>Creation</h1>
    <p>
      <%=raw @member.creation %>
    </p>
  </section>
  <section>
    <h1>Accept Calls From</h1>
    <p>
      <%=raw @member.accept_calls_from %>
    </p>
  </section>
  <section>
    <h1>Hours</h1>
    <p>
      <%=raw @member.hours %>
    </p>
  </section>
  <section>
    <h1>Affiliation</h1>
    <p>
      <%=raw @member.affiliation %>
    </p>
  </section>
  <section>
    <h1>Staff</h1>
    <p>
      <%=raw @member.staff %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="members">
      <% @members.each do |member| %>
        <li>
          <%= link_to member.name, refinery.members_member_path(member) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
