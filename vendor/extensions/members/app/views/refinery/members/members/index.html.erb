<% content_for :body do %>
  <table id="members" class="table table-condensed">
    <tr>
      <td colspan="2"><%= image_tag "kaart.gif" %></td>
    </tr>
    <% @states.each do |state| -%>
      <tr>
        <td><%= state.name %></td>
        <td>
          <ul class="comma-list">
            <% state.members.order("name ASC").each do |member| %>
              <li>
                <%= link_to member.name, refinery.members_state_members_path(member, state_id: member.state) %>
              </li>
            <% end -%>
          </ul>
        </td>
      </tr>
    <% end -%>
  </table>
<% end %>

<%= render '/refinery/content_page' %>
