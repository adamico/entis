<% content_for :body_content_title do %>
  <%= @publication.authors %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Authors</h1>
    <p>
      <%=raw @publication.authors %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @publication.title %>
    </p>
  </section>
  <section>
    <h1>Review</h1>
    <p>
      <%=raw @publication.review %>
    </p>
  </section>
  <section>
    <h1>Year</h1>
    <p>
      <%=raw @publication.year %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="publications">
      <% @publications.each do |publication| %>
        <li>
          <%= link_to publication.authors, refinery.publications_publication_path(publication) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
